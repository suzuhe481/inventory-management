extends ../template/layout 

block content 
  h1= title

  form(method="POST" action="")
    div.form-group
      label(for="name") Genre: 
      input#name.form-control(type="text", placeholder="Action, Adventure, etc..." name="name" required=true value=(genre === undefined ? "" : genre.name))

      br
      
      button.btn.btn-primary(type="submit") Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg