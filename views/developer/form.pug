extends ../template/layout

block content
  h1= title

  form(method="POST" action="")
    div.form-group
      label(for="name") Developer:
      input#name.form-control(type="text" name="name" required=true value=(developer === undefined ? "" : developer.name))

    button.btn.btn-primary(type="submit") Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg